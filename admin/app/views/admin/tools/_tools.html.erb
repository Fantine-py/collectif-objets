
<div class="panel">
  <h3>Send In Blue Debug</h3>
  <div class="panel_contents">
    <%= form_tag admin_tools_enqueue_emails_report_path, method: :post do %>
    <fieldset class="inputs">
      <ol>
        <li class="string input optional stringish">
          <%= label_tag :email, "Email" %>
          <%= text_field_tag :email, current_admin_user.email %>
        </li>
        <li>
          <%= submit_tag "Envoyer le rapport sur les contacts des listes Send In Blue" %>
        </li>
      </ol>
    </fieldset>
    <% end %>
  </div>
</div>

<div class="panel">
  <h3>Outils externes</h3>
  <div class="panel_contents">
    <p>
      <%= link_to "⚙️ Sidekiq - Suivi des tâches asynchrones", "/sidekiq" %>
    </p>
    <% if Rails.env.development? %>
      <p>
        <%= link_to "📬 Mailcatcher", "http://localhost:1080" %>
      </p>
    <% end %>
  </div>
</div>
