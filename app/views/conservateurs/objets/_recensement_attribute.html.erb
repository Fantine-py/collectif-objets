<div class="attribute-group">
  <div class="fr-grid-row">
    <div class="fr-col-md-4 fr-pt-3w fr-pb-1w">
      <b><%= t("activerecord.attributes.recensement.#{attribute_name}").html_safe %></b>
    </div>
    <div class="fr-col-md-6 co-background--input-grey">
    </div>
  </div>
  <div class="fr-grid-row">
    <div class="fr-col-md-4">
      <%= yield %>
    </div>
    <div class="fr-col-md-6 co-background--input-grey">
      <textarea class="fr-input co-textarea--not-resizable co-textarea--border-light"></textarea>
    </div>
    <div class="fr-col-md-2 fr-pl-1w">
      <ul class="fr-btns-group fr-btns-group--inline">
        <% [:opt1, :opt2].each do |key| %>
          <li>
            <button
              class="fr-btn fr-btn--tertiary fr-btn--sm"
              data-content="<%= t("conservateurs.recensements.#{attribute_name}_messages.#{key}.title") %>"
            >
              <%= t("conservateurs.recensements.#{attribute_name}_messages.#{key}.title") %>
            </button>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
