<main class="fr-container fr-py-4w fr-grid-row">
  <div class="fr-col-12 fr-col-md-6">
    <h2><%= t('.sign_in') %></h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), builder: FormBuilderDsfr) do |f| %>
      <div class="fr-input-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="fr-checkbox-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <div class="actions">
        <%= f.submit t('.sign_in') %>
      </div>
    <% end %>
    <%= link_to "Mot de passe oubliÃ© ?", new_password_path(resource_name) %><br />
  </div>
</main>
