<main class="fr-container fr-py-4w fr-grid-row" data-controller="devise--sessions">
  <div class="fr-col-12 fr-col-md-6">
    <div class="fr-mb-6w">
      <h3>Mon compte</h3>
      <p>
        <b>Email</b>: <%= current_user.email %><br />
        <b>Commune</b>: <%= current_user.commune&.nom || "N/A" %>
      </p>
      <p>
        <%= link_to "Déconnexion", destroy_user_session_path, class: "fr-btn fr-btn--secondary fr-fi-logout-box-r-line fr-btn--icon-left", data: { turbo_method: :delete } %>
      </p>
    </div>
    <div class="fr-mb-6w">
      <h3>Modifier mon email</h3>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, builder: FormBuilderDsfr) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="fr-input-group">
          <%= f.label :email, value: "Nouvel email" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>En attente de confirmation pour: <%= resource.unconfirmed_email %></div>
        <% end %>
        <div class="fr-input-group">
          <%= f.label :current_password %> <i>Veuillez renseigner votre mot de passe actuel pour modifier votre email</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password" %>
        </div>
        <div class="actions">
          <%= f.submit "Modifier mon email" %>
        </div>
      <% end %>
    </div>
    <div class="fr-mb-6w">
      <h3>Suppression</h3>
      <p><%= button_to "Supprimer mon compte ", registration_path(resource_name), form: { data: { turbo_confirm: "Êtes-vous sûr(e) de vouloir supprimer votre compte ?" } }, method: :delete, class: "fr-btn fr-btn--secondary fr-fi-delete-line fr-btn--icon-left" %></p>
    </div>
  </div>
</main>
